@page
@model VeterinarianApp.Pages.Veterinarians.ProfileModel
@{
}
<div class="text-center heading-color mb-4">
    <h2>Edit Profile</h2>
</div>
<div class="bg-white shadow rounded p-4 mb-4">
    <div class="pb-3">
        <h2 class="edit-page-headng">Personal Information</h2>
    </div>
    <form class="px-4">
        <!-- Veterinarian Name -->
        <label class="Veterinarian-style">Veterinarian Name</label>
        <div class="mt-3">
            <div class="row">
                <div class="form-group mb-3 col-md-6">
                    <label for="firstName" class="input-label-style">First Name (required)</label>
                    <input type="text"
                           class="form-control custom-form-control"
                           id="firstName"
                           required />
                </div>
                <div class="form-group mb-3 col-md-6">
                    <label for="lastName" class="input-label-style">Last Name (required)</label>
                    <input type="text"
                           class="form-control custom-form-control"
                           id="lastName"
                           required />
                </div>
            </div>

            <div class="form-group mb-3">
                <label for="email" class="input-label-style">Personal Email (required)</label>
                <small class="form-text text-muted d-block">
                    We promise not to share this with the public. This is how
                    we'll contact you about your profile.
                </small>
                <input type="email"
                       class="form-control custom-form-control"
                       id="email"
                       required />
            </div>

            <div class="form-group mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="updates" />
                <label class="form-check-label input-label-style input-label-style"
                       for="updates">Sign up for news & Updates</label>
            </div>

            <div class="form-group mb-3">
                <label for="password" class="input-label-style">Password</label>
                <input type="password"
                       class="form-control custom-form-control"
                       id="password"
                       required />
            </div>
            <div class="form-group mb-3">
                <label for="confirmPassword" class="input-label-style">Re-type Password</label>
                <input type="password"
                       class="form-control custom-form-control"
                       id="confirmPassword"
                       required />
            </div>

            <div class="form-group mb-3">
                <label for="personalNumber" class="input-label-style">Personal Number (required)</label>
                <small class="form-text text-muted d-block">We promise not to share this with the public.</small>
                <input type="tel"
                       class="form-control custom-form-control"
                       id="personalNumber"
                       required />
            </div>

            <div class="form-group mb-3">
                <label for="license" class="input-label-style">Veterinary License</label>
                <small class="form-text text-muted d-block">
                    This will not be shared with the public. We will use it to
                    validate your credentials.
                </small>
                <input type="text"
                       class="form-control custom-form-control"
                       id="license"
                       required />
            </div>

            <div class="form-group mb-3 d-md-flex gap-5 align-items-baseline">
                <label for="profilePicture" class="input-label-style">Profile Picture</label>
                <div class="btn btn-view w-25"
                     onclick="document.getElementById('profilePicture').click()">
                    <input type="file"
                           class="custom-form-control-file"
                           id="profilePicture"
                           required
                           style="opacity: 0; position: absolute; z-index: -1" />
                    <span>Upload File</span>
                </div>
            </div>
        </div>
        <!-- Social Media -->
        <div class="pt-3">
            <div class="pb-3">
                <label class="edit-page-headng">Social Media</label>
            </div>

            <div class="form-group mb-3">
                <label for="twitter" class="input-label-style">Twitter</label>
                <input type="text"
                       class="form-control custom-form-control"
                       id="twitter" />
            </div>

            <div class="form-group mb-3">
                <label for="facebook" class="input-label-style">Facebook</label>
                <input type="text"
                       class="form-control custom-form-control"
                       id="facebook" />
            </div>

            <div class="form-group mb-3">
                <label for="instagram" class="input-label-style">Instagram/Threads</label>
                <input type="text"
                       class="form-control custom-form-control"
                       id="instagram" />
            </div>

            <div class="form-group mb-3">
                <label for="youtube" class="input-label-style">YouTube</label>
                <input type="text"
                       class="form-control custom-form-control"
                       id="youtube" />
            </div>
        </div>
        <!-- Clinic -->
        <div class="py-3">
            <label class="edit-page-headng">Clinic</label>
        </div>
        <div class="body-bg p-3 mt-3">
            <div class="form-group mb-3">
                <label for="clinicName" class="input-label-style">Clinic Name (required)</label>
                <input type="text"
                       class="form-control"
                       id="clinicName"
                       required />
            </div>

            <div class="form-group mb-3">
                <label for="clinicCountry" class="input-label-style">Clinic Address (required)</label>
                <label for="clinicCountry" class="input-label-style d-block">Country</label>
                <select class="form-select" id="clinicCountry" required>
                    <option selected disabled>Country</option>
                    <option>United States</option>
                    <option>Canada</option>
                    <option>United Kingdom</option>
                </select>
            </div>

            <div class="form-group mb-3">
                <label for="addressLine1" class="input-label-style">Address Line 1 (required)</label>
                <input type="text"
                       class="form-control"
                       id="addressLine1"
                       required />
            </div>

            <div class="form-group mb-3">
                <label for="addressLine2" class="input-label-style">Address Line 2</label>
                <input type="text" class="form-control" id="addressLine2" />
            </div>

            <div class="row mb-3">
                <div class="col-md-4">
                    <label for="clinicCity" class="input-label-style">City (required)</label>
                    <input type="text"
                           class="form-control"
                           id="clinicCity"
                           required />
                </div>
                <div class="col-md-4">
                    <label for="clinicState" class="input-label-style">State (required)</label>
                    <input type="text"
                           class="form-control"
                           id="clinicState"
                           required />
                </div>
                <div class="col-md-4">
                    <label for="clinicZip" class="input-label-style">Zip Code (required)</label>
                    <input type="text"
                           class="form-control"
                           id="clinicZip"
                           required />
                </div>
            </div>

            <div class="form-group mb-3">
                <label for="clinicPhone" class="input-label-style">Clinic Phone (required)</label>
                <input type="tel"
                       class="form-control"
                       id="clinicPhone"
                       required />
            </div>

            <div class="form-group mb-3">
                <label for="clinicEmail" class="input-label-style">Clinic Email</label>
                <input type="email" class="form-control" id="clinicEmail" />
            </div>

            <div class="form-group mb-4">
                <label for="clinicWebsite" class="input-label-style">Clinic Website</label>
                <input type="url" class="form-control" id="clinicWebsite" />
            </div>
        </div>
